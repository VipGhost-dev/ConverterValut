<Application x:Class="ConverterValut.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConverterValut"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style x:Key="Headers" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>
        <ControlTemplate TargetType="Button" x:Key="btns">
            <Border CornerRadius="15" BorderBrush="#FFFFC843" BorderThickness="3" Background="#FFD49000">
                <ContentControl Margin ="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}" Foreground="Black">
                </ContentControl>
            </Border>
        </ControlTemplate>
        
    </Application.Resources>
</Application>
